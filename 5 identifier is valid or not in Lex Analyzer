lex
%{
#include <stdio.h>
#include <stdlib.h>
%}

%%
[a-zA-Z_][a-zA-Z0-9_]*    { printf("Valid identifier: %s\n", yytext); }
.                         { printf("Invalid identifier\n"); }
%%

int main(int argc, char* argv[]) {
    if (argc < 2) {
        printf("Usage: %s <identifier>\n", argv[0]);
        return 1;
    }
    
    yy_scan_string(argv[1]);
    yylex();
    
    return 0;
}


